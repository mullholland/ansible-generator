---
- name: Verify
  hosts: all
  become: true
  gather_facts: true

  tasks:
    - name: SmokeTests
      ansible.builtin.debug:
        msg:
          - {% raw %}"ansible_version => {{ansible_version}}"{% endraw %}

          - {% raw %}"ansible_distribution => {{ ansible_distribution }}"{% endraw %}

          - {% raw %}"ansible_distribution_major_version => {{ ansible_distribution_major_version }}"{% endraw %}

          - {% raw %}"ansible_os_family  => {{ ansible_os_family}}"{% endraw %}

          - {% raw %}"ansible_system  => {{ ansible_system }}"{% endraw %}

    - name: check if connection still works
      ansible.builtin.ping:
